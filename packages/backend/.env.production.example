# =============================================================================
# Production Environment Variables
# Stellar Smart Contract DApp - Backend
#
# Copy this file to .env.production and fill in the values.
# NEVER commit the actual .env.production file to version control.
# =============================================================================

# Database Configuration
DATABASE_URL="postgresql://stellar_user:CHANGE_ME_STRONG_PASSWORD@postgres:5432/stellar_dapp"
POSTGRES_DB=stellar_dapp
POSTGRES_USER=stellar_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis Configuration
REDIS_URL="redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379"
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Server Configuration
PORT=3001
NODE_ENV=production
API_BASE_URL=https://api.your-domain.com

# JWT Configuration
JWT_SECRET=CHANGE_ME_GENERATE_A_STRONG_SECRET_KEY
JWT_EXPIRES_IN=24h

# Stellar Network Configuration (mainnet)
STELLAR_NETWORK=mainnet
STELLAR_HORIZON_URL=https://horizon.stellar.org
STELLAR_PASSPHRASE="Public Global Stellar Network ; September 2015"

# Soroban Configuration (mainnet)
SOROBAN_RPC_URL=https://soroban.stellar.org
SOROBAN_NETWORK_PASSPHRASE="Public Global Stellar Network ; September 2015"

# Contract Addresses (populate after deployment)
TRANSACTION_CONTRACT_ADDRESS=
ESCROW_CONTRACT_ADDRESS=
INVOICE_CONTRACT_ADDRESS=

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com
FROM_NAME="Stellar DApp"

# Frontend URL (for email links and CORS)
FRONTEND_URL=https://your-domain.com
CLIENT_PORTAL_URL=https://your-domain.com/client

# Security Configuration
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=logs/app.log

# Background Job Configuration
CONDITION_CHECK_INTERVAL=300000
INVOICE_EXPIRATION_CHECK_INTERVAL=3600000
TRANSACTION_SYNC_INTERVAL=60000

# Docker Compose Production Ports (optional overrides)
FRONTEND_PORT=80
BACKEND_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379
